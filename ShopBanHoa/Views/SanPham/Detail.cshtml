@model ShopBanHoa.Models.product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
   
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Exo+2' rel='stylesheet' type='text/css'>
    <script src="~Content/js/jquery1.min.js"></script>
    <!-- start menu -->
    <link href="~/Content/css/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="~/Content/js/megamenu.js"></script>
    <script>$(document).ready(function () { $(".megamenu").megamenu(); });</script>
    <script type="text/javascript" src="~/Content/js/jquery.jscrollpane.min.js"></script>
    <script type="text/javascript" id="sourcecode">
        $(function () {
            $('.scroll-pane').jScrollPane();
        });
    </script>
    <!-- start details -->
    <script src="~/Content/js/slides.min.jquery.js"></script>
    <script>
        $(function () {
            $('#products').slides({
                preload: true,
                preloadImage: 'img/loading.gif',
                effect: 'slide, fade',
                crossfade: true,
                slideSpeed: 350,
                fadeSpeed: 500,
                generateNextPrev: true,
                generatePagination: false
            });
        });
    </script>
    <!-- start zoom -->
    <link rel="stylesheet" href="~/Content/css/zoome-min.css" />
    <script type="text/javascript" src="~/Content/js/zoome-e.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#img1,#img2,#img3,#img4').zoome({ showZoomState: true, magnifierSize: [250, 250] });
        });
    </script>
</head>

<div class="mens">
    <div class="main">
        <div class="wrap">
            <ul class="breadcrumb breadcrumb__t"><a class="home" href="#">Trang chủ</a> / <a href="@Url.Action("Index","SanPham")">Sản Phẩm</a> / @Model.name</ul>
            <div class="cont span_2_of_3">
                <div class="grid images_3_of_2">
                    <div id="container">
                        <div id="products_example">
                            <div id="products">
                                <div class="slides_container" style="overflow: hidden; position: relative; display: block;">
                                    <a href="#"><img class="img-zoom-container" id="img1" src="~/Content/update/product/Hoa/@Model.img" alt="" rel="~/Content/update/product/@Model.img" style="height:100%;width:100%"/ ></a>

                                </div>
                                <ul class="pagination">
                                    <li><a href="#"><img src="~/Content/update/product/Hoa/@Model.img" width="s-img" alt="1144953 3 2x"></a></li>
                                    <li><a href="#"><img src="~/Content/update/product//Hoa/@Model.img" width="s-img1" alt="1144953 3 2x"></a></li>
                                    <li><a href="#"><img src="~/Content/update/product/Hoa/@Model.img" width="s-img2" alt="1144953 3 3x"></a></li>
                                    <li><a href="#"><img src="~/Content/update/product/Hoa/@Model.img" width="s-img2" alt="1144953 3 3x"></a></li>

                                    <div class="clear"></div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="desc1 span_3_of_2">
                    <h3 class="m_3">@Model.name</h3>
                    <p class="m_5">@Model.price <a href="#">click for offer</a></p>
                    <div class="btn_form">
                        <form>
                            <input type="submit" value="buy" title="">
                        </form>
                    </div>
                    <span class="m_link"><a href="#">Đăng nhập để thêm vào giỏ hàng</a> </span>
                    <p class="m_text2">@Model.description</p>
                </div>
                <div class="clear"></div>
                <div class="clients">
                    <h3 class="m_3">những Sản Phẩm Tương tự </h3>
                    <ul id="flexiselDemo3">
                        <li><img src="~/Content/update/product/Hoa/@Model.img" /><a href="#">@Model.name</a><p>@Model.price</p></li>
                        <li><img src="~/Content/update/product/Hoa/@Model.img" /><a href="#">@Model.name</a><p>@Model.price</p></li>
                        <li><img src="~/Content/update/product/Hoa/@Model.img" /><a href="#">@Model.name</a><p>@Model.price</p></li>
                        <li><img src="~/Content/update/product/Hoa/@Model.img" /><a href="#">@Model.name</a><p>@Model.price</p></li>
                        <li><img src="~/Content/update/product/Hoa/@Model.img" /><a href="#">@Model.name</a><p>@Model.price</p></li>

                    </ul>
                    <script type="text/javascript">
                        $(window).load(function () {
                            $("#flexiselDemo1").flexisel();
                            $("#flexiselDemo2").flexisel({
                                enableResponsiveBreakpoints: true,
                                responsiveBreakpoints: {
                                    portrait: {
                                        changePoint: 480,
                                        visibleItems: 1


                                    },
                                    landscape: {
                                        changePoint: 640,
                                        visibleItems: 2

                                    },
                                    tablet: {
                                        changePoint: 768,
                                        visibleItems: 3

                                    }
                                }
                            });

                            $("#flexiselDemo3").flexisel({
                                visibleItems: 5,
                                animationSpeed: 1000,
                                autoPlay: true,
                                autoPlaySpeed: 3000,
                                pauseOnHover: true,
                                enableResponsiveBreakpoints: true,
                                responsiveBreakpoints: {
                                    portrait: {
                                        changePoint: 480,
                                        visibleItems: 1


                                    },
                                    landscape: {
                                        changePoint: 640,
                                        visibleItems: 2

                                    },
                                    tablet: {
                                        changePoint: 768,
                                        visibleItems: 3

                                    }
                                }
                            });

                        });
                    </script>
                    <script type="text/javascript" src="~/Content/js/jquery.flexisel.js"></script>
                </div>
                <div class="toogle">
                    <h3 class="m_3">Product Details</h3>
                    <p class="m_text">@Model.description1</p>
                </div>
                <div class="toogle">
                    <h3 class="m_3">More Information</h3>
                    <p class="m_text">@Model.description2</p>
                </div>
            </div>
            <div class="fb-comments" data-href="https://www.facebook.com/SHOPHOATUOIFLOW/" data-numposts="10"></div>

            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>

